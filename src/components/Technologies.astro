---
import { Icon } from "astro-icon";

export interface Props {
  text: string;
  logo: string;
}

const { text, logo } = Astro.props as Props;
---

<div class="flex items-center p-4">
  <span class="flex justify-center items-center w-11 h-11 mr-3 rounded-full dark:bg-[#1a1c23] bg-[#e2e2e4] border-t border-stone-400 dark:border-zinc-700 transition">
    <Icon name={logo} class="w-6" />
  </span>
  <p>{text}</p>
</div>
