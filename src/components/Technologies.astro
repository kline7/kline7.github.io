---
import { Icon } from "astro-icon";

export interface Props {
  text: string;
  logo: string;
}

const { text, logo } = Astro.props as Props;
---

<div class="flex items-center p-4">
  <span class="flex justify-center items-center w-11 h-11 mr-3 rounded-full dark:bg-zinc-800 bg-zinc-200 border-t border-zinc-400 dark:border-zinc-600 transition">
    <Icon name={logo} class="w-6" />
  </span>
  <p>{text}</p>
</div>
