---
import { Icon } from "astro-icon";

export interface Props {
  text: string;
  logo: string;
}

const { text, logo } = Astro.props as Props;
---

<li class="flex items-center p-4">
  <span class="flex justify-center items-center w-12 h-12 mr-3 rounded-full dark:bg-zinc-800 bg-zinc-200 text-zinc-800 dark:text-white transition-colors">
    <Icon name={logo} class="w-6" />
  </span>
  <p>{text}</p>
</li>
